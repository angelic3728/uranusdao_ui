{
  "name": "uranus-info-api",
  "version": "1.0.0",
  "description": "Serverless API implementation for VVS Finance on-chain data query.",
  "license": "MIT",
  "scripts": {
    "build": "./node_modules/.bin/ts-node build.ts",
    "format:check": "prettier --check '*/**/*.{js,ts}'",
    "format:write": "prettier --write '*/**/*.{js,ts}'",
    "lint": "eslint '*/**/*.{js,ts}'",
    "start:dev": "node ./dist",
    "start:sta": "node ./dist --env=staging",
    "start:prod": "node ./dist --env=production",
    "start:test": "node ./dist --env=test",
    "start": "nodemon",
    "codegen": "graphql-codegen --config src/utils/apollo/codegen.yml"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node ./src"
  },
  "dependencies": {
    "@apollo/client": "^3.3.13",
    "@ethersproject/address": "^5.1.0",
    "bignumber.js": "^9.0.1",
    "command-line-args": "^5.2.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "graphql-tag": "^2.11.0",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "jet-logger": "^1.0.6",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@graphql-codegen/cli": "^1.21.3",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-operations": "^1.17.11",
    "@types/command-line-args": "^5.2.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/morgan": "^1.9.3",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "fs-extra": "^10.0.0",
    "graphql": "^15.5.0",
    "husky": "^4.3.8",
    "nodemon": "^2.0.13",
    "prettier": "^2.2.1",
    "ts-node": "^10.3.0",
    "typescript": "^4.2.3"
  }
}
